{
  "name": "v-modals",
  "version": "1.2.0",
  "description": "A simple Vue 3 modal component with internationalization support",
  "type": "module",
  "main": "dist/simple-modal.umd.js",
  "module": "dist/simple-modal.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/simple-modal.es.js",
      "require": "./dist/simple-modal.umd.js"
    },
    "./i18n": {
      "types": "./dist/i18n/index.d.ts",
      "import": "./dist/i18n.es.js",
      "require": "./dist/i18n.umd.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && npm run build:types",
    "build:types": "vue-tsc --project tsconfig.build.json",
    "dev": "vite",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit"
  },
  "keywords": [
    "vue",
    "vue3",
    "modal",
    "dialog",
    "component"
  ],
  "author": "han1548772930",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/han1548772930/vue-modal.git"
  },
  "homepage": "https://github.com/han1548772930/vue-modal#readme",
  "bugs": {
    "url": "https://github.com/han1548772930/vue-modal/issues"
  },
"peerDependencies": {
  "vue": ">=3.0.0",
  "lucide-vue-next": ">=0.500.0",
  "tailwind-merge": ">=3.0.0",
  "@vueuse/core": ">=13.0.0",
  "daisyui": ">=5.0.0"
},
  "dependencies": {
    "vue-i18n": "^11.1.12",
    "vue-types": "^6.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.3.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "lucide-vue-next": "^0.542.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vue-tsc": "^3.0.6"
  }
}
